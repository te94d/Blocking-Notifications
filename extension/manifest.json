{
  "name": "Blocking phishing sites",
  "description": "Control method for web push notification by browser extension",
  "version": "1.5",
  "manifest_version": 2,
  "icons": {
    "128": "img/tenshi_akuma_man.png"
},
  "web_accessible_resources": [
    "js/content.js",
    "js/blocked.json"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["js/inject.js"]
    }
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_title": "",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "*://*/*",
    "tabs",
    "nativeMessaging",
    "webRequest",
    "webRequestBlocking",
    "webNavigation"
  ]
}